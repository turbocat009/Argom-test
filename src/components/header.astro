---
import Menu from "./menu.astro";
---
<Menu />
<main>
    <section class="logo">
        <a href="/">
            <img src="/logo.svg" alt="Logo" />
        </a>
    </section>
    <section>
        <aside>
            <button id="menu-button" aria-label="Menu">
                <div></div>
                <div></div>
                <div></div>
            </button>
        </aside>
    </section>
</main>

<style>
    main {
        display: flex;
        justify-content: space-between;
        padding: 50px;
    }

    .logo img {
        max-width: 150px;
        height: auto;
        z-index: 100;
    }

    svg {
        fill: white;
        z-index: 100;
    }

    aside {
        display: flex;
        justify-content: center;
        background-color: #0004;
        backdrop-filter: blur(10px);
        border-radius: 50px;
        padding: 10px;
        z-index: 100;
    }

    aside:hover {
        background-color: #0008;
    }

    button {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 0.65rem;
        width: 3rem;
        height: 3rem;
        background-color: #0000;
        backdrop-filter: blur(10px);
        border-radius: 50px;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
        animation: moveButton 0.5s;
    }

    button div {
        background-color: white;
        width: 95%;
        height: 3px;
        transition: all 0.3s ease-in-out;
        transform-origin: left;
    }

    button div:nth-child(1) {
        animation: changeLogo1 0.5s;
    }

    button div:nth-child(2) {
        animation: changeLogo3 0.5s;
    }

    button div:nth-child(3) {
        animation: changeLogo2 0.5s;
    }


    @keyframes moveButton {
        0% {
            transform: translateX(0px);
        }
        100% {
            transform: translateX(5px);
        }
    }

    @keyframes changeLogo1 {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(45deg);
        }
    }

    @keyframes changeLogo2 {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(-45deg);
        }
    }

    @keyframes changeLogo3 {
        0% {
            opacity: 100%;
        }
        100% {
            opacity: 0%;
        }
    }
</style>
